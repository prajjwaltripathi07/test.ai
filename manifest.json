{
  "manifest_version": 3,
  "name": "Test AI",
  "version": "2.1",
  "description": "Extracts text, passages, or images to get answers.",

  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "*://generativelanguage.googleapis.com/*"
  ],

  "action": {
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "lib/tesseract.min.js",
        "content.js"
      ],
      "all_frames": true
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "lib/worker.min.js",
        "lib/eng.traineddata"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}